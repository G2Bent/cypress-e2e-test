{
  "name": "cypress-e2e-test",
  "version": "1.0.2",
  "license": "MIT",
  "scripts": {
    "test": "yarn clean ; yarn test:run ; yarn test:report",
    "clean": "rm -rf mochawesome-report cypress/screenshots cypress/videos",
    "test:run": "cypress run",
    "test:report": "rm -rf report && mkdir report && yarn test:merge && yarn test:marge",
    "test:merge": "mochawesome-merge > report/mochawesome.json",
    "test:marge": "marge report/mochawesome.json -o report"
  },
  "dependencies": {
    "cypress": "^3.4.1",
    "cypress-social-logins": "^1.0.4",
    "cypress-xpath": "^1.4.0",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "mochawesome-merge": "^1.0.6"
  }
}
